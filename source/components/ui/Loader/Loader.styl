@keyframes loader_animation {
  0%   { transform: rotate(0deg)   }
  100% { transform: rotate(360deg) }
}

.loader
  border-style: solid
  border-color: lightgray #E6E6E6 #E6E6E6 #E6E6E6
  border-radius: 50%
  box-sizing: border-box
  animation: loader_animation 1.5s linear infinite

.loader.tiny
  border-width: 2px
  width: 15px
  height: 15px

.loader.small
  border-width: 3px
  width: 25px
  height: 25px

.loader.medium
  border-width: 5px
  height: 60px
  width: 60px

.loader.large
  border-width: 10px
  height: 110px
  width: 110px

.loader.fluid
  border-width: 5px
  width: 100%
  height: 100%

