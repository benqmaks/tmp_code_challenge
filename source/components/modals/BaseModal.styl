@import '../../theme/theme.styl'

.modal
  display: table
  background-color: white
  position: relative
  padding: 20px
  box-sizing: border-box
  z-index $zIndex-modal
  border-radius: 3px
  box-shadow: 0 19px 38px rgba(black, 30%),
              0 15px 12px rgba(black, 20%)
  height: auto
  margin: 30px auto

.closeButton
  position: absolute
  right: 10px
  top: 10px
  display: block
  width: 16px
  height: 16px
  background-image: url('/static/images/close.svg')
  background-repeat: no-repeat
  background-position: center
  background-size: contain
  cursor: pointer
  opacity: 0.5
  transition: opacity 0.2s ease-in-out

.closeButton:hover
  opacity: 1

.backdrop
  position: fixed
  top: 0
  right: 0
  bottom: 0
  left: 0
  background-color: rgba(black, 70%)
  z-index: $zIndex-modal-backdrop
  overflow-x: hidden
  overflow-y: auto
